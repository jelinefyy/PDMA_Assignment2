            android:layout_weight="1"
            android:textSize="72dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:weightSum="3"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/b4"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="72dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/b5"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="72dp"
            android:layout_height="match_parent" />
